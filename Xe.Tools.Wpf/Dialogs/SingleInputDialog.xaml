<Window x:Class="Xe.Tools.Wpf.Dialogs.SingleInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xe.Tools.Wpf.Dialogs"
        mc:Ignorable="d"
        Title="SingleInputDialog" Height="130" Width="300">
    <StackPanel >
        <TextBlock x:Name="ctrlLabelDescription" Text="Description" Margin="10,10,10,0"/>
        <TextBox x:Name="ctrlTextboxInput" Height="23" Margin="10,0,10,0" GotFocus="ctrlTextboxInput_GotFocus"/>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Content="_Cancel" Width="75" Margin="0,0,10,0" IsCancel="True"/>
            <Button Content="_Ok" Width="75" IsDefault="True" Click="Button_Click" />
        </StackPanel>
    </StackPanel>
</Window>
