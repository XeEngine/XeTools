        <CheckBox Grid.Row="12" Grid.Column="0" Content="{Binding Name6, Mode=OneTime}"  IsChecked="{Binding Value6}"/>
        <CheckBox Grid.Row="14" Grid.Column="0" Content="{Binding Name7, Mode=OneTime}"  IsChecked="{Binding Value7}"/>
        <CheckBox Grid.Row="0"  Grid.Column="2" Content="{Binding Name8, Mode=OneTime}"  IsChecked="{Binding Value8}"/>
        <CheckBox Grid.Row="2"  Grid.Column="2" Content="{Binding Name9, Mode=OneTime}"  IsChecked="{Binding Value9}"/>
        <CheckBox Grid.Row="4"  Grid.Column="2" Content="{Binding Name10, Mode=OneTime}" IsChecked="{Binding Value10}"/>
        <CheckBox Grid.Row="6"  Grid.Column="2" Content="{Binding Name11, Mode=OneTime}" IsChecked="{Binding Value11}"/>
