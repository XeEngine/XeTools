<Window xmlns:Controls="clr-namespace:Xe.Tools.Wpf.Controls;assembly=Xe.Tools.Wpf"  x:Class="Xe.Tools.Components.AnimationEditor.Windows.WindowFrames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xe.Tools.Components.AnimationEditor.Windows"
        mc:Ignorable="d"
        Title="Frames" Height="300" Width="442.806">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0"/>
        <DockPanel Grid.Column="1" Margin="10 0 0 0">
            <TextBlock DockPanel.Dock="Top" Text="Frame name"/>
            <TextBox DockPanel.Dock="Top" x:Name="TextFrameName"/>
            <Controls:NumericUpDown DockPanel.Dock="Bottom" />
            <Canvas Margin="0 5 0 5"/>
        </DockPanel>
    </Grid>
</Window>
