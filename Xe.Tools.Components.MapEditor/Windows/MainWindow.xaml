<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xe.Tools.Components.MapEditor.Windows"
        xmlns:Controls="clr-namespace:Xe.Tools.Components.MapEditor.Controls" x:Class="Xe.Tools.Components.MapEditor.Windows.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            
        </StackPanel>
        <DockPanel Grid.Column="1">
            <ScrollBar DockPanel.Dock="Bottom" Orientation="Horizontal"/>
            <ScrollBar DockPanel.Dock="Right" Orientation="Vertical"/>
            <Controls:Tilemap x:Name="tileMap"/>
        </DockPanel>
    </Grid>
</Window>
